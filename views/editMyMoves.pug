extends index.pug

block content
    if myMoves
        div.container-fluid
            div.row
                each pose in myMoves
                    div(class="col-lg-2 col-md-3 col-sm-4 col-12")
                        div.card.tallness 
                            if pose.cover_thumbnail
                                img(src=`http://yoga.com/${pose.cover_thumbnail}` alt=`${pose.meta_title} image here` class="card-img-top img-fluid")
                                a(style="float: right;" href=`/user/pose/${pose.up_pk_id}`)
                                    button(class="editMyMove btn btn-info", name="edit", value=`${pose.up_pk_id}`, style="cursor: pointer;") edit
                                button(class="mmxbuttons btn btn-danger", name="derete", value=`${pose.up_pk_id}`, style="cursor: pointer;") delete
                                a(href=`/poses/${pose.id}`)
                                    div(class="card-block")
                                        h6(class="card-title") #{pose.meta_title}
                                        if pose.up_special_directions
                                            p(class="card-text") #{pose.up_special_directions}
                                        if pose.up_breath
                                            p(class="card-text") #{pose.up_breath}
                                        if pose.card_timing
                                            p(class="card-text") #{pose.card_timing} 


    else    
        p NO MOVES

    script(src="/public/jquery/dist/jquery.min.js")
    script(src="/public/tether/dist/js/tether.min.js")
    script(src="/public/styles/bootstrap/dist/js/bootstrap.min.js")
    script(src="/public/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.js")
    script(src="/public/main.js")
